@page "/"

@if (_loginRequired)
{
    <div class="container-sm">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Enter your name:</h5>
                <input type="text" class="form-text" id="inputUserId" @bind-value="_txtUserId" />
                <p class="card-text">Before you can continue, you must enter your username</p>
                <button class="btn-primary" @onclick="SubmitUserId">Submit</button>
            </div>
        </div>
    </div>
}


@if (!_loginRequired)
{
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="alert alert-secondary" role="alert">
                Welcome back <b>@_txtUserId</b>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <textarea style="width:100%;height:40vh;overflow:scroll; " @bind="_txtareaMessages" readonly></textarea>
        </div>

    </div>

    <div class="row">
        <div class="col-12">
            <b>Messages:</b>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <input type="text" style="width:100%" @bind-value="_txtMessage" />
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <button class="btn-primary" @onclick="SendMessage">Send</button>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <b>Logs:</b>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <textarea style="width:100%;height:20vh;overflow:scroll; " @bind="_logAreaMessages" readonly></textarea>
        </div>

    </div>
</div>
}

@code {

    private string _txtUserId;
    private string _txtMessage;
    private string _txtareaMessages;
    private string _logAreaMessages;
    private bool _loginRequired = false;


    private void SendMessage()
    {
        if (string.IsNullOrEmpty(_txtMessage))
        {
            return;
        }

        _txtareaMessages += _txtMessage + Environment.NewLine;
        _txtMessage = string.Empty;

    }

    protected override Task OnInitializedAsync()
    {
        _loginRequired = true;
        return Task.CompletedTask;
    }

    private void SubmitUserId()
    {
        _loginRequired = false;
    }

}
